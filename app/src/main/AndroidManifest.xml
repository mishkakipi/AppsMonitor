<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afeka.android.appsmonitor">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Registration"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_child_selector"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activities.ChildSelector"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_child_selector"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activities.AppsUsageViewer"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_app_selector"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.History"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>