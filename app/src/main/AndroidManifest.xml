<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afeka.android.appsmonitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".manager.BootLoader"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.Registration"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ChildSelector"
            android:label="@string/title_activity_child_selector"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AppsUsageViewer"
            android:label="@string/title_activity_app_selector"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
